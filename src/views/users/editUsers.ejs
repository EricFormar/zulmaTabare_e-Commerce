
<%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

    <main class="container mt-5">
        <h1>Editar Usuario</h1>

        <form action="/users/edit/<%= user.user_id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" value="<%= user.first_name %>" required>
            </div>
            <div class="mb-3">
                <label for="user_name" class="form-label">Nombre de Usuario</label>
                <input type="text" class="form-control" id="user_name" name="user_name" value="<%= user.user_name %>" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
            </div>
            <div class="mb-3">
                <label for="user_password" class="form-label">ContraseÃ±a (Dejar en blanco para no cambiar)</label>
                <input type="password" class="form-control" id="user_password" name="user_password">
            </div>
            <div class="mb-3">
                <label for="security_question" class="form-label">Pregunta de Seguridad</label>
                <input type="text" class="form-control" id="security_question" name="security_question" value="<%= user.security_question %>" required>
            </div>
            <div class="mb-3">
                <label for="security_answer" class="form-label">Respuesta de Seguridad</label>
                <input type="text" class="form-control" id="security_answer" name="security_answer" value="<%= user.security_answer %>" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Imagen de Perfil</label>
                <input type="file" class="form-control" id="image" name="image">
                <% if (user.image) { %>
                    <img src="/uploads/<%= user.image %>" alt="Imagen de perfil" class="mt-2" style="max-width: 100px;">
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>

</html>