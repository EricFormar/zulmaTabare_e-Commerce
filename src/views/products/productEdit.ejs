<%-include('../partials/head') %>

<body>
    
    <%-include('../partials/header') %>


    <main>
    
    <div class="container">
    
        <h1 class="text-center mb-4">Editar producto</h1>
        <form class="w-50 mx-auto" action="/products/edit/<%= product.product_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
    
        <div class="form-group mb-3">
        <label for="name">Nombre del Producto:</label>
        <input class="form-control" type="text" id="name" name="name" value="<%= product.product_name %>" required>
        </div>
        
        <div class="form-group mb-3">
        <label for="description">Descripción:</label>
        <textarea class="form-control" id="description" name="description" required><%= product.product_description %></textarea>
        </div>
        
        <div class="form-group mb-3">
        <label for="image">Imagen (dejar vacío si no se cambia):</label>
        <input class="form-control" type="file" id="image" name="image">
        </div>
        
        <div class="form-group mb-3">
        <label for="price">Precio:</label>
        <input class="form-control" type="number" id="price" name="price" step="0.01" value="<%= product.price %>" required>
        </div>

        <div class="form-group mb-3">
            <label for="description">Categoría:</label>
            <textarea class="form-control" id="category" name="category" required><%= product.category %> </textarea>
            </div>
        
        <button type="submit" class="btn btn-primary mx-auto" style="max-width: 150px;">Editar Producto</button>
    
    </form>
    
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</main>
</body>
</html>
