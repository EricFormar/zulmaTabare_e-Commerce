<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
<main>
    
    
<!-- Sección del Carrusel -->
<section class="carousel">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <% carouselItems.forEach(product => { %>
                <div class="swiper-slide">
                    <a href="/products/detail/<%= product.product_id %>"><img src="/uploads/<%= product.image %>" alt="<%= product.product_name %>" class="products-img-ambos"> </a>
                </div>
            <% }) %>
        </div>


            <!-- Paginación -->
            <div class="swiper-pagination"></div>
            <!-- Navegación -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </section>

    <div>
        <h4>Ofertas</h4>
    </div>
    
    <section class="offers">
        <!-- Productos -->
        <% products.forEach(product => { %>
            <div class="products">
                <a href="/products/detail/<%= product.product_id %>"><img class="article" src="/uploads/<%= product.image %>" alt="<%= product.product_name %>"></a>
                <div class="flex-container">
                    <div class="fav">
                        <i class="fa-solid fa-heart"></i>
                        <i class="fa-solid fa-bag-shopping"></i>
                    </div>
                    <div class="precio">$<%= product.price %></div>
                    <div class="descr"><%= product.product_name %></div>
                </div>
            </div>
        <% }) %>
    </section>
</main>
<%- include('partials/footer') %>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="/javascripts/carousel.js"></script>
<script src="/javascripts/index.js"></script> 

</body>
</html>
